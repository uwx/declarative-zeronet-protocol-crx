{
  "manifest_version": 2,
  "name": "ZeroNet Protocol",
  "short_name": "ZeroNet",
  "description": "ZeroNet Protocol",
  "version": "0.3",
  "permissions": [ "tabs", "proxy", "webRequest", "webRequestBlocking", "*://*.bit/*", "*://*.zero/*", "*://*.zite/*", "*://zero/*", "http://127.0.0.1/*", "http://127.0.0.1:43110/*", "http://localhost/*", "storage" ],

  "icons": {
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },

  "browser_action": {
    "default_icon": "assets/icon_48.png",
    "default_title": "ZeroNet"
  },

  "options_ui": {
    "page": "settings.html",
    "chrome_style": true
  },

  "background": {
    "scripts": ["js/background.js"]
  }
}
